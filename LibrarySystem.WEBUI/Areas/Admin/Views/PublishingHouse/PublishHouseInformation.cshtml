@model List<PublishingHouseCustomModel>
@{
    ViewData["Title"] = "PublishHouseInformation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card m-b-20">
            <div class="card-block">

                <h4 class="mt-0 header-title">Default Datatable</h4>
                <p class="text-muted m-b-30 font-14">
                    Açıklama yazısı
                </p>

                <table id="datatable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>PublishingHouseName</th>
                            <th>PublishingHouseAddress</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PublishingHouseName</td>
                                <td>@item.PublishingHouseAddress</td>
                                <td>
                                    <a asp-action="UpdateBook" asp-controller="Home" asp-area="Admin" class="btn btn-outline-danger">Sil</a>
                                    <a asp-action="UpdateBook" asp-controller="Home" asp-area="Admin" class="btn btn-outline-info">Güncelle</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <br />

            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->

